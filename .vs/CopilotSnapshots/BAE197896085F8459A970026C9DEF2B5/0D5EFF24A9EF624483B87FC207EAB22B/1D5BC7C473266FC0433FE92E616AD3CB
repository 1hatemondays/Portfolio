    <!-- Back to Top Button -->
    <button id="back-to-top" class="fixed bottom-8 right-8 w-12 h-12 bg-gradient-to-r from-sky-500 to-cyan-500 text-white rounded-full shadow-lg hover:shadow-sky-500/25 transition-all duration-300 opacity-0 pointer-events-none z-30">
        <i data-lucide="arrow-up" class="w-6 h-6 mx-auto"></i>
